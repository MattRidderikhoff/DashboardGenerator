{% set data = chart.getData() %}

<script>
    var ctx = document.getElementById('{{ chart.getTitle() }}');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: [{% for x_value in data.x_value %}"{{ x_value }}",{% endfor %}], {# here goes the X vals #}
            datasets: [{
                label: "{{ chart.getTitle() }}",
                data: [{% for y_value in data.y_value %}{{ y_value }},{% endfor %}], {# here goes the Y vals #}
                backgroundColor: [{% for colour in data.colour %}"{{ colour }}",{% endfor %}],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero:true
                    }
                }]
            }
        }
    });
</script>