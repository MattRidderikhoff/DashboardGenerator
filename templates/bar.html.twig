{% set data = chart.getData() %}

<script>
    new Chart(document.getElementById('{{ chart.getTitle() }}'), {
        type: 'bar',
        data: {
            labels: [{% for x_value in data.x_values %}"{{ x_value }}",{% endfor %}],
            datasets: [{
                label: "{{ chart.getTitle() }}",
                data: [{% for y_value in data.y_values %}{{ y_value }},{% endfor %}],
                backgroundColor: [{% for colour in data.colours %}"{{ colour }}",{% endfor %}]
            }]
        },
        options: {
            title: {
                display: true,
                text: '{{ chart.getTitle() }}'
            },
            layout: {
                padding: {
                    left: 0,
                    right: 0,
                    top: 0,
                    bottom: 30
                }
            },
            scales:{
                yAxes: [{
                    scaleLabel: {
                        display: true,
                        fontSize: 13,
                        labelString: '{{ chart.getYLabel() }}'
                    }
                }],
                xAxes: [{
                    scaleLabel: {
                        display: true,
                        fontSize: 13,
                        labelString: '{{ chart.getXLabel() }}'
                    },
                    ticks: {
                        maxRotation: 0
                    }
                }]
            }
        }
    });
</script>