<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}DashboardCreator{% endblock %}</title>
        {% block stylesheets %}
            {% include 'style.html.twig' %}
        {% endblock %}
    </head>
    <body>
        {% block body %}

            {# track charts that are already in groups, so they can be excluded below #}
            {% set grouped_charts = [] %}
            {% for group in groups %}
                <div id='{{ group.getTitle() }}'>
                    {# todo: add the 'canvas' tags for the charts in this group. Add their titles to grouped_charts #}
                </div>
            {% endfor %}

            {% for chart in charts  %}
                {% if chart.getTitle() not in grouped_charts %}
                    <canvas id='{{ chart.getTitle() }}' width='100' height='100'></canvas>
                {% endif %}
            {% endfor %}

        {% endblock %}

        {% block javascripts %}
            <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>

            {% for chart in charts %}
                {% if chart.getType() == 'bar_chart' %}
                    {% include 'bar.html.twig' with {'chart': chart} only %}
                {% elseif chart.getType() == 'line_chart' %}
                    {# todo: fill this in with line.html.twig #}
                {% elseif chart.getType() == 'pie_chart' %}
                    {% include 'pie.html.twig' with {'chart': chart} only %}
                {% endif %}
            {% endfor %}
        {% endblock %}
    </body>
</html>
