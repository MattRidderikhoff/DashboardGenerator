<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}DashboardCreator{% endblock %}</title>
        {% block stylesheets %}
            {# .css references go here #}
        {% endblock %}
    </head>
    <body>
        {% block body %}

            {% for node in nodes  %}
                {# do chart grouping here #}
                <canvas id='{{ node.getTitle() }}' width='100' height='100'></canvas>
            {% endfor %}

        {% endblock %}

        {% block javascripts %}
            <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>

            {% for node in nodes %}
                {% if node.getType() == 'bar_chart' %}
                    {% include 'bar.html.twig' with {'title': node.getTitle()} only %}
                {% endif %}
            {% endfor %}
        {% endblock %}
    </body>
</html>
