<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}DashboardCreator{% endblock %}</title>
        {% block stylesheets %}
            {# .css references go here #}
        {% endblock %}
    </head>
    <body>
        {% block body %}

            {% for group in groups  %}
                {# do grouping in here. Up to you how this is implemented (may require javascript) #}
            {% endfor %}

            {% for chart in charts  %}
                <canvas id='{{ chart.getTitle() }}' width='100' height='100'></canvas>
            {% endfor %}

        {% endblock %}

        {% block javascripts %}
            <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>

            {% for chart in charts %}
                {% if chart.getType() == 'bar_chart' %}
                    {% include 'bar.html.twig' with {'title': chart.getTitle()} only %}
                {% endif %}
            {% endfor %}
        {% endblock %}
    </body>
</html>
