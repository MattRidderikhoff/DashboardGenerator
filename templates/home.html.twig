<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}DashboardCreator{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="css/home.css">
    {% endblock %}
</head>
<body>
{% block body %}

    <div>
        <div class="home-left">
            <h3>Current Datasets</h3>

            <form id="datasets-remove" action="/">
                <div class="datasets-list">
                    <select multiple id="datasets-remove-form" name="to_remove[]">
                        {% for dataset in datasets %}
                            <option value="{{ dataset }}">{{ dataset }}</option>
                        {% endfor %}
                    </select>
                </div>

                <button type="button">Upload dataset</button>
                <button>Remove dataset</button>
            </form>
        </div>

        <div class="home-right">
            <div class="render">
                <button>Show charts</button>
            </div>

            <div class="dsl">
                <button>Upload DSL .txt</button>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
{% endblock %}
</body>
</html>
